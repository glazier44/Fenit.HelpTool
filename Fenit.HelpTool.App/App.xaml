<prism:PrismApplication x:Class="Fenit.HelpTool.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnLastWindowClose"
             xmlns:prism="http://prismlibrary.com/"
                       
             Startup="AppStartup">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BorderBrush" Value="LightGoldenrodYellow" />
                <Setter Property="Background" Value="Gold" />
                <Setter Property="Padding" Value="3" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Width" Value="150px" />
                <Setter Property="Cursor" Value="Hand" />

                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="SubHeaderLabelBoxStyle" TargetType="Label">
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="HeaderLabelBoxStyle" TargetType="Label">
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="2,0,2,2" />
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style x:Key="MenuTheme" TargetType="Control">
                <Setter Property="Background" Value="Gold" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="Width" Value="Auto" />
            </Style>

            <Style x:Key="MenuItemheme" TargetType="MenuItem">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="Cursor" Value="Hand" />

            </Style>
            <Style x:Key="GridLabelBoxStyle" TargetType="Label">
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="2" />
            </Style>
            <Style x:Key="GridTextBoxStyle" TargetType="TextBox">
                <Setter Property="BorderBrush" Value="DarkGray" />
                <Setter Property="Padding" Value="2" />
                <Setter Property="Margin" Value="2" />
                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>
