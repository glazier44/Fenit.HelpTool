<Window
    x:Class="Fenit.HelpTool.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regions="http://prismlibrary.com/"
    Title="HelpTool"
    Width="1200"
    Height="1000"
    Icon="Properties/logo.ico"
    Loaded="MainWindow_OnLoaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <ContentControl
            Grid.Row="0"
            VerticalAlignment="Top"
            regions:RegionManager.RegionName="MenuRegion" />
        <ContentControl Grid.Row="1" regions:RegionManager.RegionName="ContentRegion" />
        <ContentControl
            Grid.Row="2"
            VerticalAlignment="Bottom"
            regions:RegionManager.RegionName="FooterRegion" />
    </Grid>
</Window>
